{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "strict": true,
        "noImplicitAny": false,
        "allowJs": true,
        "declaration": true
    },
    "include": [
        "src/",
    ],
    "exclude": ["node_modules"]
}
